#!/bin/sh

set -e

umask 077

basedir=~/.levitate
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/levitate.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Levitate does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/levitate/levitate-qt "$@"
